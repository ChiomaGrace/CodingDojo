
<div class = "container">
    <% if @errors%>
            <% @errors.each do |error| %>
            <p class = 'danger'><%= error %></p>
            <% end %>
    <% end%>
    <h2 class= "mt-4">Weclome!</h1>
    <div class="row">
        <div class="col-sm-5">
            <h2 class= "mt-4 ml-3">CREATE AN ACCOUNT</h1>
            <form action="/users" method="post">
                <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
            <div class="form-group col-sm-6 mt-3">
                <input type="text" class="form-control" id="" aria-describedby="firstNameHelp" name= "user[firstName]" placeholder="First Name">
            </div>
            <div class="form-group col-sm-6  mt-3">
                <input type="text" class="form-control" id="" aria-describedby="lastNameHelp" name= "user[lastName]" placeholder="Last Name">
            </div>
            <div class="form-group col-sm-6  mt-3">
                <input type="text" class="form-control" id="" aria-describedby="emailAddressHelp" name= "user[emailAddress]" placeholder="Email Address">
            </div>
            <div class="form-group col-sm-6  mt-3">
                <input type="text" class="form-control" id="" aria-describedby="cityHelp" name= "user[city]" placeholder="City">
            </div>
            <div class="form-group col-sm-6  mt-3">
                <select class="form-control" id="" name = 'user[state]'>
                    <option name=''value =''>Select State</option>
                        <option value="AZ">AZ</option> <%# since this is hard coded, the option value would match the text in the option field %>
                        <option value="CA">CA</option>
                        <option value="IL">IL</option>
                        <option value="NY">NY</option>
                        <option value="OH">OH</option>
                        <option value="WA">WA</option>
                </select>
            </div>
            <div class="form-group col-sm-6  mt-3">
                <input type="password" class="form-control" id="" aria-describedby="passwordHelp" name= "user[password]" placeholder="Password">
            </div>
            <div class="form-group col-sm-6  mt-3">
                <input type="password" class="form-control" id="" aria-describedby="passwordConfirmationHelp" name= "user[password_confirmation]" placeholder="Confirm Password">
            <%# user[password_confirmation] password_confirmation is the exact syntax needed so bcrypt knows what it is. do not need a password confirmation field in the models. %>
            </div> 
            <button type="submit" class="btn btn-primary ml-3">Create</button>
            </form>
        </div>
        <div class="col-sm-2">
            <%# Two of three columns %>
        </div>
        <div class="col-sm-5">
            <h2 class= "mt-4 ml-3">LOG IN</h1>
            <form action="/sessions/create" method="post">
                <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
            <div class="form-group col-sm-6  mt-3">
                <input type="email" class="form-control" id="" aria-describedby="emailAddressHelp" name= "user[emailAddress]" placeholder="Email Address">
            </div>
            <div class="form-group col-sm-6  mt-3">
                <input type="password" class="form-control" id="" aria-describedby="passwordHelp" name= "user[password]" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-primary ml-3">Login</button>
            </form>
        </div>
    </div>
</div>