<%= render 'shared/navBar' %> 
<a class= "float-right" href="/events">Events Dashboard</a>


<div class="container mt-5">
    <% if @errors%>
        <% @errors.each do |error| %>
        <p class = 'danger'><%= error %></p>
        <% end %>
    <% end%>

    <div class="row mt-4">
        <div class="col-sm-6">
            <h1>Edit <%= currentUser.firstName %> <%= currentUser.lastName %></h1>
            <form action='/users/<%= currentUser.id %>' method="post">
                <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
                <input type="hidden" name="_method" value="patch">
                <div class="form-group row">
                    <%# <label for="firstName" class="col-sm-4 col-form-label">First Name</label> %>
                    <div class="col-sm-8 pb-4 mt-1">
                        <input type="text"  name='user[firstName]' value="<%=currentUser.firstName%>" placeholder="First Name" class="form-control" id="" aria-describedby="firstNameHelp">
                    </div>
                    <%# <label for="lastName" class="col-sm-4 col-form-label">Last Name</label> %>
                    <div class="col-sm-8 pb-4">
                        <input type="text"  name='user[lastName]' value="<%=currentUser.lastName%>" placeholder="Last Name" class="form-control" id="" aria-describedby="lastNameHelp">
                    </div>
                    <%# <label for="email" class="col-sm-4 col-form-label">Email Address</label> %>
                    <div class="col-sm-8 pb-4">
                        <input type="email"  name='user[emailAddress]' value="<%=currentUser.emailAddress%>"  placeholder="Email" class="form-control" id="" aria-describedby="emailHelp">
                    </div>
                    <div class="form-group col-sm-6  mt-3">
                        <input type="text" class="form-control" id="" aria-describedby="cityHelp" name= "user[city]" value="<%=currentUser.city%>" placeholder="City">
                    </div>
                    <div class="form-group col-sm-6  mt-3">
                        <select class="form-control" id="" name = 'user[state]'>
                            <option name=''value ='value="<%=currentUser.state%>"'><%=currentUser.state%></option>
                                <option value="AZ">AZ</option> <%# since this is hard coded, the option value would match the text in the option field %>
                                <option value="CA">CA</option>
                                <option value="IL">IL</option>
                                <option value="NY">NY</option>
                                <option value="OH">OH</option>
                                <option value="WA">WA</option>
                        </select>
                    </div>
                </div>
            <button type="submit" class="btn btn-primary ml-1">Update</button>
            </form>
        </div> 
        <div class="col-sm">
    <%# One of two columns %>
        </div> 
    </div> 
</div>

