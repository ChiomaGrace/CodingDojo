<div class = "container">
    <% if @errors%>
            <% @errors.each do |error| %>
            <p class = 'danger'><%= error %></p>
            <% end %>
    <% end%>
    <div class="row">
        <div class="col-sm-5">
            <h1 class= "mt-4 ml-3">CREATE AN ACCOUNT</h1>
            <form action="/users" method="post">
                <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
            <div class="form-group col-sm-6 mt-3">
                <input type="firstName" class="form-control" id="" aria-describedby="firstNameHelp" name= "user[firstName]" placeholder="First Name">
            </div>
            <div class="form-group col-sm-6  mt-3">
                <input type="lastName" class="form-control" id="" aria-describedby="lastNameHelp" name= "user[lastName]" placeholder="Last Name">
            </div>
            <div class="form-group col-sm-6  mt-3">
                <input type="email" class="form-control" id="" aria-describedby="emailAddressHelp" name= "user[emailAddress]" placeholder="Email Address">
            </div>
            <div class="form-group col-sm-6  mt-3">
                <input type="password" class="form-control" id="" aria-describedby="passwordHelp" name= "user[password]" placeholder="Password">
            </div>
            <div class="form-group col-sm-6  mt-3">
                <input type="password" class="form-control" id="" aria-describedby="passwordConfirmationHelp" name= "user[password_confirmation]" placeholder="Confirm Password">
            </div> 
            <%# user[password_confirmation] password_confirmation is the exact syntax needed so bcrypt knows what it is. do not need a password confirmation field in the models. %>
            <button type="submit" class="btn btn-primary ml-3">Create</button>
            </form>
        </div>
        <div class="col-sm-2">
            <%# Two of three columns %>
        </div>
        <div class="col-sm-5">
            <h1 class= "mt-4 ml-3">LOG IN</h1>
            <form action="/sessions/create" method="post">
                <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
            <div class="form-group col-sm-6  mt-3">
                <input type="email" class="form-control" id="" aria-describedby="emailAddressHelp" name= "user[emailAddress]" placeholder="Email Address">
            </div>
            <div class="form-group col-sm-6  mt-3">
                <input type="password" class="form-control" id="" aria-describedby="passwordHelp" name= "user[password]" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-primary ml-3">Login</button>
            </form>
        </div>
    </div>
</div>