<div class="container mt-5">

    <% if @errors%>
        <% @errors.each do |error| %>
        <p class = 'danger'><%= error %></p>
        <% end %>
    <% end%>

    <div class="row mt-4">
        <div class="col-sm-4">
            <h1>New Student</h1>
            <form action='/dojos/<%= @specificDojo.id %>/students' method="post">
                <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
                <div class="form-group row">
                    <label for="firstName" class="col-sm-2 col-form-label">First Name</label>
                    <div class="col-sm-10">
                        <input type="text"  name='student[firstName]' placeholder="First Name" class="form-control" id="" aria-describedby="firstNameHelp">
                    </div>
                    <label for="lastName" class="col-sm-2 col-form-label">Last Name</label>
                    <div class="col-sm-10">
                        <input type="text"  name='student[lastName]' placeholder="Last Name" class="form-control" id="" aria-describedby="lastNameHelp">
                    </div>
                    <label for="email" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input type="email"  name='student[email]' placeholder="Email" class="form-control" id="" aria-describedby="emailHelp">
                    </div>
                    <label for="dojo" class="col-sm-2 col-form-label">Dojo</label>
                    <div class="col-sm-10 mt-3">

                        <select class="form-control" id="" name = 'student[dojo]'>
                                <option name=''value =''>Select Dojo</option>
                            <% @dojos.each do |dojo| %>
                                <option <%=(dojo.id== @specificDojo.id)? "selected":""%> value="<%= dojo.id %>"><%= dojo.branch %></option>
                            <%# the above code is an if statement () is the if the ? is asking if it's true %>
                            <% end %>
                        </select>
                    </div>
                </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div> 
        <div class="col-sm">
    <%# One of two columns %>
        </div> 
    </div> 
</div>

