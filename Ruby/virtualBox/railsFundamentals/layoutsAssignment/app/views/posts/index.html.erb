<% content_for :leftColumn do %>
    <h1>All Posts</h1>
    <table class="table table-hover">
        <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Content</th>
                    <th scope="col">Author</th>
                </tr>
        </thead>
        <tbody>
            <% @posts.each do |post| %>
            <tr>
                <td> <%= post.title %> </td>
                <td> <%= post.content %> </td>
                <td> <%= post.user.firstName %> </td>
            </tr>
            <% end %>
        </tbody>
    </table>
<% end %>

<% content_for :middleColumn do %>
<h1>New Post</h1>
<form action="/posts" method="post">
        <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="title" name= "post[title]" class="form-control" id="" aria-describedby="titleHelp">
        </div>
        <div class="form-group">
            <label for="contentLabel">Content</label>
            <textarea class="form-control" name= "post[content]" id="" rows="3"></textarea>
        </div>
        <div class="form-group">
        <label for="author">Authors</label>
            <select class="form-control" id="" name = 'post[user]' placeholder='author'>
                    <option value="">Select Your Name</option>
                <% @users.each do |user| %>
                    <option value="<%= user.id %>"><%= user.firstName %></option>
                <% end %>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

<% end %>

<% content_for :rightColumn do %>
<h1>Go to Users Page</h1>
<a class="btn btn-primary mt-2" href="/users" role="button">All Users</a>

<% end %>
