<div class= "container">
    <div class= "row">
        <div class= "col-sm-6">
            <form class="" action= "/messages" method="post">
                <div class="form-group">
                    <label class="mt-4" for="MessageLabel">Post a Message</label>
                    <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
                    <textarea class="form-control" id="messageForm" name="message[message]" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary mr-3">Post a Message</button>
            </form>
        </div>
    </div>
    <div class= "row">
        <table class="table table-borderless mt-4">
            <thead>
            <% @allMessages.each do |message| %>
                <tr>
                    <th scope="col"><%= message.user.username %>, <%= message.user.created_at%></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class=><%= message.message %></td>

                </tr>
                    
                <tr> 
                    <td>
                    <%# TRY TO DO THIS WITH SELF JOIN  %>
