                                <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
                                <textarea class="form-control" id="messageForm" name="message[message]" rows="3"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary mr-3">Post a Comment</button>
                            </form>
                        </div>  
                    </td> 

                </tr> 
                
            <% end %>
            </tbody>
        </table>
    </div>
</div>
